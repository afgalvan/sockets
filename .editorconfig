root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 90

[*.{html,css,scss,js,jsx,json,ts,tsx,md,conf,yml,yaml}]
indent_size = 2

[*.{ts, tsx, js, jsx}]
quote_type = single

[Makefile]
indent_style = tab
indent_size = 8

